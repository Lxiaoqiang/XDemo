<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black01"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_whether_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/iv_whether_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/sun" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/tv_whether_item_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_rectangle_color_blue"
            android:padding="3dp"
            android:textColor="@android:color/white" />-->
    </LinearLayout>


    <TextView
        android:id="@+id/tv_whether_item_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13/19°"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_whether_item_whether"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阴转阵雨"
        android:textColor="@android:color/white" />
</LinearLayout>